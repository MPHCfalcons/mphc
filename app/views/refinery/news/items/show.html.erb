<% content_for :body do %>
  <article class="news_item">
    <h1><%= @item.title.upcase %></h1>
    <p>
      <small><%= t('.published') %> <%= l(@item.publish_date, :format => :long) %></small>
    </p>
    <% if @item.source.present? %>
      <p>
        <small><%= t('.source') %> <%= @item.source %></small>
      </p>
    <% end %>
    <%= @item.body.html_safe %>
    <%= image_fu @item.news_image, '350x350' %>
    <p>
      <%= link_to t('.back_to_index').upcase, refinery.news_items_path %>
    </p>
  </article>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2>Other News</h2>
    <ul id="other_news">
      <% @items.each do |item| %>
        <li>
          <h2><%= link_to item.title.upcase, refinery.news_item_path(item) %></h2>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render "/refinery/content_page" %>
