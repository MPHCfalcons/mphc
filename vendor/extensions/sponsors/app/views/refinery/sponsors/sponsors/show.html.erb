<% content_for :body_content_title do %>
  <%= @sponsor.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @sponsor.title.upcase %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @sponsor.description %>
    </p>
  </section>
  <section>
    <h1>Image</h1>
    <p>
      <%= image_fu @sponsor.image, nil %>
    </p>
  </section>
  <section>
    <h1>Link</h1>
    <p>
      <%=raw @sponsor.link %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="sponsors">
      <% @sponsors.each do |sponsor| %>
        <li>
          <%= link_to sponsor.title, refinery.sponsors_sponsor_path(sponsor) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
