<% content_for :body do %>
  <ul id="sponsors">
    <% @sponsors.each do |sponsor| %>
      <li>
        <%= image_fu sponsor.image, '300x300' %>
        <h2><%= sponsor.title.upcase %></h2>
        <div id="sponsors_content">
        <%=raw sponsor.description %>
        <%=raw sponsor.link %>
        </div>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render '/refinery/content_page' %>
