<% content_for :body do %>
  <ul id="sponsors">
    <% @sponsors.each do |sponsor| %>
      <li>
        <%= image_fu sponsor.image, nil %>
        <h2><%= link_to sponsor.title, refinery.sponsors_sponsor_path(sponsor) %></h2>
        <%=raw sponsor.description %>
        <%=raw sponsor.link %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render '/refinery/content_page' %>
