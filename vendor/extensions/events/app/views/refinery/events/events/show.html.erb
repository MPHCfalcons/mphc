<% content_for :body do %>
    <h2><%=raw @event.title.upcase %></h2>
    <%=raw @event.date %>
    <p>
      <%=raw @event.blurb %>
    </p>
    <%= image_fu @event.photo, '300x300' %>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="events">
      <% @events.each do |event| %>
        <li>
        <h2><%= link_to event.title.upcase, refinery.events_event_path(event) %></h2>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
